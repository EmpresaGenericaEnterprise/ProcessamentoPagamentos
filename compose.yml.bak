services:
  rabbitmq:
    image: rabbitmq:3-management
    container_name: rabbitmq
    ports:
      - "5672:5672" # AMQP protocol port
      - "15672:15672" # Management UI port
    environment:
      RABBITMQ_DEFAULT_USER: admin
      RABBITMQ_DEFAULT_PASS: senha-admin
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq
    networks:
      - messaging-network

  kafka:
    image: confluentinc/cp-kafka:7.8.0
    hostname: kafka01
    container_name: kafka

    ports:
      - "9092:9092"
      - "9093:9093"

    environment:
      KAFKA_NODE_ID: 1
      KAFKA_BROKER_ID: 1
      KAFKA_PROCESS_ROLES: "broker,controller"
      KAFKA_LISTENERS: "PLAINTEXT://kafka01:9092,PLAINTEXT_HOST://localhost:9092,CONTROLLER://kafka01:9093"
      KAFKA_ADVERTISED_LISTENERS: "PLAINTEXT://kafka01:9092,PLAINTEXT_HOST://localhost:9092"
      KAFKA_CONTROLLER_LISTENER_NAMES: "CONTROLLER"
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: "CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT"
      KAFKA_CONTROLLER_QUORUM_VOTERS: 1@kafka01:9093
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR: 1
      KAFKA_TRANSACTION_STATE_LOG_MIN_ISR: 1
      KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS: 0
      KAFKA_NUM_PARTITIONS: 3
      CLUSTER_ID: "abc"
    volumes:
      - kafka01_data:/var/lib/kafka/data
    networks:
      - messaging-network

  kafka-ui:
    container_name: kafka-ui
    image: provectuslabs/kafka-ui:latest
    depends_on:
      - kafka
    ports:
      - 9494:8080
    environment:
      KAFKA_CLUSTERS_0_NAME: local
      KAFKA_CLUSTERS_0_BOOTSTRAP_SERVERS: kafka01:9092
    networks:
      - messaging-network

  postgres:
    image: postgres:18-alpine
    container_name: postgres
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: operador
      POSTGRES_PASSWORD: senhaoperador
      POSTGRES_DB: operacao
    volumes:
      - postgres_data:/var/lib/postgresql/18/docker
    networks:
      - messaging-network

volumes:
  rabbitmq_data:
  postgres_data:
  kafka01_data:

networks:
  messaging-network:
    driver: bridge
